<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Настройки приложения">

        <SwitchPreference
            android:title="Тёмная тема"
            android:summary="Отлично подходит для ночного чтения"
            android:defaultValue="false"
            android:key="theme_dark"
            />

        <SwitchPreference
            android:title="Открыть книгу при запуске"
            android:summary="При запуске приложения откроется последняя читаемая книга, а не главный экран"
            android:defaultValue="true"
            android:key="item_load_last_book"
            />

        <Preference
            android:title="Отключить рекламу"
            android:summary="Хороший способ поблагодарить разработчиков :)"
            android:key="disable_ads"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Настройки чтения">
