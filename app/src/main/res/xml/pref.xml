            android:key="item_menu_auto_hide"
            />

        <SwitchPreference
            android:title="Навигация свайпом"
            android:summary="Перелистывать страницы левым и правым свайпом"
            android:defaultValue="false"
            android:key="item_navigation_by_swipe"
            />
