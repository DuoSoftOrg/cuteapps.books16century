        <SwitchPreference
            android:title="Сохранять позицию на странице"
            android:summary="Автоматическое сохранение вертикальной позиции страницы"
            android:defaultValue="true"
            android:key="item_auto_save_progress"
            />

    </PreferenceCategory>

</PreferenceScreen>